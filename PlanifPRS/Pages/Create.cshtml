        function addChecklistAffectation(checklistIndex, type) {
            const selectId = type === 'user' ? 'modalUserSelect' : 'modalGroupSelect';
            const select = document.getElementById(selectId);
            const selectedOption = select.options[select.selectedIndex];

            if (!selectedOption.value) {
                showRobiaNotification('Veuillez sélectionner un ' + (type === 'user' ? 'utilisateur' : 'groupe'), 'warning');
                return;
            }

            if (!checklistAffectations[checklistIndex]) {
                checklistAffectations[checklistIndex] = [];
            }

            const affectation = {
                id: parseInt(selectedOption.value),
                type: type === 'user' ? 'Utilisateur' : 'Groupe',
                name: selectedOption.dataset.name
            };

            // Vérifier si déjà ajouté
            const exists = checklistAffectations[checklistIndex].some(a =>
                a.type === affectation.type && a.id === affectation.id
            );

            if (exists) {
                showRobiaNotification('Cette affectation existe déjà', 'warning');
                return;
            }

            checklistAffectations[checklistIndex].push(affectation);
            updateChecklistAffectationDisplay(checklistIndex);
            updateChecklistAffectationsData();

            select.selectedIndex = 0;
            showRobiaNotification('Affectation ajoutée', 'success');
        }

        function updateChecklistAffectationDisplay(checklistIndex) {
            const container = document.getElementById(`affectations-${checklistIndex}`);
            const affectations = checklistAffectations[checklistIndex] || [];

            if (affectations.length === 0) {
                container.innerHTML = '<span class="text-muted">Aucune affectation</span>';
                return;
            }

            container.innerHTML = affectations.map((aff, affIndex) => `
                <span class="affectation-tag ${aff.type === 'Groupe' ? 'groupe' : ''}">
                    <i class="fas fa-${aff.type === 'Utilisateur' ? 'user' : 'users'}"></i>
                    ${aff.name}
                    <i class="fas fa-times remove-affectation-tag" onclick="removeChecklistAffectation(${checklistIndex}, ${affIndex})"></i>
                </span>
            `).join('');
        }

        function removeChecklistAffectation(checklistIndex, affectationIndex) {
            if (checklistAffectations[checklistIndex]) {
                checklistAffectations[checklistIndex].splice(affectationIndex, 1);
                updateChecklistAffectationDisplay(checklistIndex);
                updateChecklistAffectationsData();
                showRobiaNotification('Affectation supprimée', 'info');
            }
        }

        function updateChecklistAffectationsData() {
            const data = [];

            Object.keys(checklistAffectations).forEach(checklistIndex => {
                const affectations = checklistAffectations[checklistIndex];
                if (affectations && affectations.length > 0) {
                    data.push({
                        checklistId: parseInt(checklistIndex), // Index temporaire, sera remplacé par l'ID réel après création
                        affectations: affectations
                    });
                }
            });

            document.getElementById('checklistAffectationsData').value = JSON.stringify(data);
        }

