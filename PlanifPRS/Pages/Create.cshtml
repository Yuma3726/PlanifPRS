        function getUtilisateursOptions() {
            const userSelect = document.getElementById('userSelect');
            let options = '';
            for (let i = 1; i < userSelect.options.length; i++) {
                const option = userSelect.options[i];
                options += `<option value="${option.value}" data-name="${option.dataset.name}">${option.text}</option>`;
            }
            return options;
